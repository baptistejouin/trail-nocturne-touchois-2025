---
import { Image } from "astro:assets";
import twentyFourImage from "../assets/imgs/twenty-four.png";
import twelveImage from "../assets/imgs/twelve.png";
import AnchorButton from "./AnchorButton.astro";
---

<div class="my-18">
  <div class="px-6 max-w-screen-lg mx-auto">
    <h2 class="font-bold text-6xl uppercase mb-6">Inscriptions</h2>
    <div class="grid md:grid-cols-2 my-6 gap-3 grid-cols-1">
		<div class="relative">
			<Image
			src={twelveImage}
			alt="Trail Nocturne Touchois 12km"
			class="object-cover w-full h-full"
			/>
			<div class="absolute inset-0 flex flex-col justify-center items-center">
				<h3 class="font-bold text-5xl text-white">12km</h3>
				<p class="mt-1 text-white">Départ 19h30</p>
				<AnchorButton class="bg-white text-black mt-6" size="medium" href="#">Je m'inscrit</AnchorButton>
			</div>
		</div>
		<div class="relative">
		  <Image
			src={twentyFourImage}
			alt="Trail Nocturne Touchois 24km"
			class="object-cover w-full h-full"
		  />
		  <div class="absolute inset-0 flex flex-col justify-center items-center">
			<h3 class="font-bold text-5xl text-white">24km</h3>
			<p class="mt-1 text-white">Départ à 19h00</p>
			<AnchorButton class="bg-white text-black mt-6" size="medium" href="#">Je m'inscrit</AnchorButton>
		  </div>
		</div>
	</div>
</div>
